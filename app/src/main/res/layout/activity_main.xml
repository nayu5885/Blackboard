<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#2E8B57">
    <TextView
            android:text="黒板アプリ（仮称）"
            android:layout_width="350dp"
            android:layout_height="94dp"
            android:id="@+id/textView" android:textSize="36sp"
            android:gravity="center" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="51dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="30dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="31dp"
            android:layout_marginBottom="10dp" app:layout_constraintBottom_toTopOf="@+id/button"
            android:textColor="#ffffff"/>
    <TextView
            android:layout_width="340dp"
            android:layout_height="51dp"
            android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="39dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="38dp"
            android:layout_marginTop="438dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginBottom="15dp" app:layout_constraintBottom_toBottomOf="parent" android:textSize="24sp"/>
    <Button
            android:text="START"
            android:layout_width="228dp"
            android:layout_height="68dp"
            android:id="@+id/button" android:textSize="24sp"
            android:layout_marginTop="367dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginBottom="20dp" app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="122dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="123dp"
            app:layout_constraintHorizontal_bias="0.516" android:background="#ffffff"/>
</androidx.constraintlayout.widget.ConstraintLayout>